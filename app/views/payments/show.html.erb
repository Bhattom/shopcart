        "name": "Shopcart",
        "description": "Test Transaction",
        "order_id": orderId,
        "handler": function (response){
          window.location.href = '/payments/success';
        },
        "prefill": {
            "name": "Om Bhatt",
            "email": "ombhatt2310@gmail.com",
            "contact": "7490933937"
        },
        "notes": {
            "address": "Bhakti Circle Nikol, Ahmedabad"
        },
        "theme": {
            "color": "#3399cc"
        }
    };
    var rzp1 = new Razorpay(options);
    rzp1.open();
    e.preventDefault();
}
</script>
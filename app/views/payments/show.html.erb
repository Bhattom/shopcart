<div class="d-flex justify-content-end">
    <%= current_user.email %>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg mx-auto">
      <div class="card my-5 shadow">
        <div class="card-body">
          <div class="row">
            <% if @cart.lineitems.any? %>
              <table>
                <thead>
                  <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                  </tr>
                </thead>
                <tbody>
                  <% @cart.lineitems.each do |item| %>
                    <tr>
                      <td><%= item.product.name %></td>
                      <td><%= item.product.price %></td>
                      <td><%= item.quantity %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            <% else %>
              <p>Cart is empty</p>
            <% end %>
          </div>
          <strong class="d-flex justify-content-end"> Total Amount:&nbsp<%= @cart.subtotal %></strong>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg mx-auto">
      <div class="card my-5 shadow">
        <div class="card-body">
          <div class="row">
            <table class="table table-bordered text-center">
              <tr>
                <th>Address</th>
                <th>City</th>
                <th>Pincode</th>
              </tr>
              <% current_user.addresses.each_with_index do |address, index| %> 
                <tr>
                  <td>
                    <%= link_to '#', class: "text-dark", style: "text-decoration: none;" do %>
                      <%= address.address %>
                    <% end %>
                  </td>
                  <td>
                    <%= address.city %>
                  </td>
                  <td>
                    <%= address.pincode %><br>
                  </td>
                </tr>
                <% break if index == 0 %>
              <% end %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="d-flex justify-content-center">
<button id="rzp-button1" class="btn btn-outline-success" > Click to Pay</button>
</div>
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>

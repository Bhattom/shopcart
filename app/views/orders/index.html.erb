
<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg mx-auto">
      <div class="card my-5 shadow">
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <h2>Your Order</h2>
            </div>
            <div class="col-md-6 text-end">
              <%= link_to 'Continue', new_address_path , class:"btn btn-outline-primary btn-lg"%>
            </div>
            <% @cart.lineitems.each do |lineitem| %>
                <div class="container">
                <div class="row">
                  <div class="col-sm-5 col-md-2 col-lg mx-auto">
                    <div class="card my-3 shadow">
                      <div class="card-body">
                        <div class="row">
                        <div class="container mt-3">
                        <div class="row">
                          <div class="col-md-3">
                             <%= image_tag lineitem.product.images.first, size:"210x210"%><br>
                          </div>
                          <div class="col-md-3">
                            <div style="font-size:21px;">
                              <h2><%= lineitem.product.name %></h2>
                              <strong>Product Description:</strong> &nbsp <%= lineitem.product.desc %><br>
                              <strong> Sizes:</strong>&nbsp
                              <% lineitem.sizes.each do |size| %> 
                                <%= size.abbreviation %><br>
                              <% end %>
                              <div class="qty">
                              <strong>Quantity: </strong> &nbsp 
                                <%= lineitem.lineitem_sizes.pluck(:quantity).join(',') %>
                              </div>
                              <div class="price_<%= lineitem.id %>"> <strong>Price:</strong> &nbsp  <%= number_to_currency(lineitem.unit_price, unit: "₹", format: "%u %n") %></div>   
                            </div>
                          </div>   
                          </div>
                    </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <% end %>
          </div>
        </div>
        <div class="d-flex justify-content-center subtotal">
        <h4><strong>Total Amount: </strong><%= number_to_currency(@cart.subtotal, unit: "₹", format: "%u %n") %></h4>
      </div>
      </div>
    </div>
  </div>
</div>
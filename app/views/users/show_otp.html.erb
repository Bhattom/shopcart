<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7  mx-auto">
      <div class="card my-5 shadow">
        <div class="card-body">
          <div class="row">
          <div class="d-flex justify-content-center">
        <h2>Enter OTP</h2>
        </div>
        <div class="d-flex justify-content-center">
        <%= form_tag verify_user_otp_path, method: :post do %>
        <div class="field">
            <%= label_tag :otp_attempt, "OTP Code" %><br />
            <%= text_field_tag :otp_attempt %>
        </div>
        <br>
        <div class="d-flex justify-content-center">
        <div class="actions">
            <%= submit_tag "Verify", class:"btn btn-outline-secondary" %>
        </div>
        </div>
        <% end %>
        </div>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>




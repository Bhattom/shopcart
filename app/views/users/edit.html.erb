<h2>Edit Details</h2>

<%= form_with(model: @product, local: true) do |form| %>

  <div class="field">
    <%= form.label :email %><br />
    <%= form.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  
  <div class="actions">
    <%= form.submit "Update" %>
  </div>
<% end %>
<%= form_with(model: [@product, @similar_product], local: true) do |form| %>
  <section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <h3 class="mb-5">Add Similar Product</h3>

            <div class="form-outline mb-4">
              
            <%= form.label :name %>
            <%= form.text_field :name, autofocus: true, autocomplete: "name",class:"form-control form-control-lg" %>
            </div>

            <div class="form-outline mb-4">
            <%= form.label :desc %>
            <%= form.text_field :desc ,class:"form-control form-control-lg" %>
            </div>

            
            <div class="form-outline mb-4">
            <%= form.label :price %>
            <%= form.number_field :price ,class:"form-control form-control-lg" %>
            </div>
            <div class="form-outline mb-4">
              <%= form.label :quantity %>
              <%= form.number_field :quantity, min: 0 ,class:"form-control form-control-lg"%>
            </div>

            <div class="form-outline mb-4">
            <%= form.label :images %>
            <%= form.file_field :images, multiple: true %>
            </div>

            <div class="action mb-4">
            <%= form.submit class:"btn btn-primary btn-lg" %>
            </div>
           
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
  <% end %>
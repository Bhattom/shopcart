<%= form_with(model: [@product, @similar_product], local: true) do |form| %>
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
    
    <div class="field">
    <%= form.label :desc %>
    <%= form.text_field :desc %>
    </div>

    <div class="field">
      <%= form.label :price %>
      <%= form.number_field :price %>
    </div>
  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, min: 0 %>
  </div>
  
  <div class="field">
  <%= form.label :images %>
  <%= form.file_field :images, multiple: true %>
  </div>

    <div class="actions">
      <%= form.submit %>
     
    </div>
  <% end %>
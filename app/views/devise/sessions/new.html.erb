<div class="background-image">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  

    <section class="">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-end align-items-center h-100">
          <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-2-strong" style="border-radius: 1rem;">
              <div class="card-body p-5 text-center">
                <h3 class="mb-5">Log In</h3>

                <div class="form-outline mb-4">
                  
                <%= f.label :email,class:"form-label" %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control form-control-lg" %>
                </div>

                <div class="form-outline mb-4">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password",class:"form-control form-control-lg" %>
                </div>

                
              

                <div class="form-outline mb-4">
                <%= f.hidden_field :role, value: 'guest' %>
                </div>

                <%= f.submit "Login",class:"btn btn-primary btn-block mb-4" %><br>
                If you Don't have account? &nbsp<%= link_to "Signup", new_user_registration_path %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
<% end %>
</div>